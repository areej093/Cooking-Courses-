{% extends 'base.html.twig' %}

{% block title %}Add New Recipe{% endblock %}

{% block body %}
    <h1>Add New Recipe</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.image) }}
    <button type="submit" class="btn btn-primary">Save</button>
    {{ form_end(form) }}
{% endblock %}
